#Ethan Rii

#Init
import random
import time

#Global Variables
pokemon_level = 0
pokemon_name = "Charizard"
day = 1

#Functions
def train(): #Trains the pokemon
    global pokemon_name
    global pokemon_level
    global day
    day = day + 1
    pokemon_level = pokemon_level + 1
    if pokemon_level <=5:
        pokemon_name = "Charizard EV1"

    if pokemon_level >= 5:
	    pokemon_name = "Charizard EV2"

    if pokemon_level >=10:
        pokemon_name = "Charizard EV3"

def gym_battle(): #Creates an outcome
    outcome = random.randint(1,20) #10% chance to win or lose
    if outcome == 1:
        print("You Won")
    else:
        print("You Lost")

def rest(): #Rests pokemon
    print ("It is day " + (str)(day) + " and " + pokemon_name + " is Level " + (str)(pokemon_level))

    if pokemon_level <=5:
        print("You’re at stage 1!")
        Stage1()

    if pokemon_level >= 5:
        print("You’re at stage 2!")
        stage2()


    if pokemon_level >=10:
        print("You’re at stage 3")
        stage3()



#Main
def pokemon():
    while True:
        print("Welcome to Pokemon Evolution")
        print("Choose todays activity: ")
        print("""1. Train
2.Gym Battle
3.Rest(Display Info)
4.Quit""")
        option= int(input("(1-4)Select Option: "))
        if option == 1:
            print("Training...")
            time.sleep(2)
            train()
        if option == 2:
            print("Fighting...")
            time.sleep(2)
            gym_battle()

        if option == 3:
         print("Sleeping...")
        time.sleep(2)
        rest()

        if option == 4:
            print("Quitting...")
            time.sleep(1)
            break


pokemon()
